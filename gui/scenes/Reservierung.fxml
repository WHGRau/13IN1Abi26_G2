<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.Controller"
      prefHeight="400.0" prefWidth="640.0">
  <children>

    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="Close"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem mnemonicParsing="false" text="Quit"/>
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items><MenuItem mnemonicParsing="false" text="About"/></items>
        </Menu>
      </menus>
    </MenuBar>

    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>

        <!-- Titel -->
        <Label layoutX="33.0" layoutY="30.0" text="Reservierung anlegen">
          <font><Font size="24.0"/></font>
        </Label>

        <!-- Datum -->
        <Label layoutX="33.0" layoutY="96.0" text="Datum:">
          <font><Font size="18.0"/></font>
        </Label>

        <TextField fx:id="tagFeldRZ"
                   layoutX="120.0" layoutY="92.0"
                   prefWidth="60.0" promptText="TT"/>
        <TextField fx:id="monatFeldRZ"
                   layoutX="190.0" layoutY="92.0"
                   prefWidth="60.0" promptText="MM"/>
        <TextField fx:id="jahrFeldRZ"
                   layoutX="260.0" layoutY="92.0"
                   prefWidth="80.0" promptText="YYYY"/>

        <!-- Uhrzeit (Drop-down) -->
        <Label layoutX="33.0" layoutY="148.0" text="Uhrzeit:">
          <font><Font size="18.0"/></font>
        </Label>
        <ComboBox fx:id="zeitComboRZ"
                  layoutX="120.0" layoutY="144.0"
                  prefWidth="140.0"/>

        <!-- Personenanzahl -->
        <Label layoutX="33.0" layoutY="200.0" text="Personen:">
          <font><Font size="18.0"/></font>
        </Label>
        <TextField fx:id="personenFeldRZ"
                   layoutX="120.0" layoutY="196.0"
                   prefWidth="80.0" promptText="z. B. 4"/>

        <!-- Info / Fehler -->
        <Label fx:id="reservierungInfoFeld"
               layoutX="33.0" layoutY="236.0"
               prefWidth="560.0"
               style="-fx-text-fill: #9f0000;"/>

        <!-- Buttons -->
        <Button layoutX="182.0" layoutY="276.0"
                prefHeight="51.0" prefWidth="276.0"
                text="Jetzt reservieren"
                onAction="#reservierenJetztButtonGedrueckt">
          <font><Font size="24.0"/></font>
        </Button>

        <Button layoutX="182.0" layoutY="340.0"
                prefHeight="45.0" prefWidth="276.0"
                text="ZurÃ¼ck"
                onAction="#switchToSceneStart">
          <font><Font size="18.0"/></font>
        </Button>

      </children>
    </AnchorPane>

  </children>
</VBox>
