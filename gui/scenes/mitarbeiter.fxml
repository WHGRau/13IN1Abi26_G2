          <font><Font size="24.0"/></font>
        </Label>

        <TableView fx:id="mitarbeiterTableView"
                   layoutX="33.0" layoutY="80.0"
                   prefWidth="574.0" prefHeight="240.0">
          <columns>
            <TableColumn fx:id="colNachname" text="Nachname" prefWidth="220.0"/>
            <TableColumn fx:id="colTisch" text="Tisch" prefWidth="120.0"/>
            <TableColumn fx:id="colUhrzeit" text="Uhrzeit" prefWidth="180.0"/>
          </columns>
        </TableView>

        <Button layoutX="33.0" layoutY="340.0"
                prefHeight="40.0" prefWidth="160.0"
